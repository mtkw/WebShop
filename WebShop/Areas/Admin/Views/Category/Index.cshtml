@model List<ProductCategory>

<div class="container">
    <div class="row">
        <div class="col-12"><h1>Product Category List</h1></div>
    </div>
    <div class="row">
        <table class="table table-dark">
            <thead class="tab-content">
                <tr>
                    <th class="col-2">Id</th>
                    <th class="col-8">Name</th>
                    <th class="col-2"></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model)
                {
                    <tr>
                        <td>@category.Id</td>
                        <td>@category.Name</td>
                        <td>
                            <div>
                                <a asp-controller="Category" asp-action="Edit" asp-route-id="@category.Id" class="btn btn-outline-info">Edit</a>
                                <a asp-controller="Category" asp-action="Delete" asp-route-id="@category.Id" class="btn btn-outline-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>
    </div>
</div>
