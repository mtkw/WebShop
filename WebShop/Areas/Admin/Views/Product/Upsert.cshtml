@using WebShop.Models.Models.Views
@model ProductVM;

<form method="post" enctype="multipart/form-data">
    <input asp-for="Product.Id" hidden />
    <input asp-for="Product.ImgPath" hidden />
    <div class="row">
        <div class="col-10">
            <div class="border p-3 mt-4">
                <div class="row pb-2">
                    <h2 class="text-primary"> @(Model.Product.Id != 0 ? "Update" : "Create") Product</h2>
                    <hr />
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Product.Name" class="p-0">Product Name</label>
                    <input asp-for="Product.Name" class="form-control" />
                    <span asp-asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Product.Price" class="p-0">Product Price</label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Product.Currency" class="p-0">Currency</label>
                    <input asp-for="Product.Currency" class="form-control" />
                    <span asp-asp-validation-for="Product.Currency" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1" >
                    <label asp-for="Product.Description" class="p-0">Product Description</label>
                    <input asp-for="Product.Description" class="form-control"/>
                    <span asp-asp-validation-for="Product.Description" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Product.ImgPath" class="p-0">Product Image</label>
                    <input asp-for="Product.ImgPath" type="file" name="file" class="form-control" />
                    <span asp-asp-validation-for="Product.ImgPath" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Product.ProductCategoryId" class="p-0">Product Category</label>
                    <select asp-for="@Model.Product.ProductCategoryId" asp-items="@Model.CategoryList" class="form-select">
                        <option disabled selected>--Select Category--</option>
                    </select>
                    <span asp-asp-validation-for="CategoryId" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Product.SupplierId" class="p-0">Supplier</label>
                    <select asp-for="@Model.Product.SupplierId" asp-items="@Model.SupplierList" class="form-select">
                        <option disabled selected>--Select Supplier--</option>
                    </select>
                    <span asp-asp-validation-for="SupplierId" class="text-danger"></span>
                </div>
                <div class="mb-3 row p-1">
                    <label asp-for="Product.Quantity" class="p-0">Quantity</label>
                    <input type="number" asp-for="Product.Quantity" class="form-control"/>
                    <span asp-asp-validation-for="Quantity" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Product.Id != 0)
                        {
                            <button class="btn btn-primary form-control" type="submit">Update</button>
                        }
                        else
                        {
                            <button class="btn btn-primary form-control" type="submit">Create</button>
                        }

                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary form-control">Back to list</a>
                    </div>
                </div>
            </div>

        </div>
        @if(Model.Product.Id != 0)
        {
            <div class="col-2">
                <img class="card-img-top" src="~/img/@(Model.Product.ImgPath).jpg" alt="@Model.Product.Name" style="height: 200px;">
            </div>
        }
        else
        {
            <div class="col-2">
               
            </div>
        }
    </div>
</form>

@section Scripts{
    <script>
        const quill = new Quill('#editor', {
          theme: 'snow'
        });
    </script>
}


