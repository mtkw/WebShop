@model WebShop.Models.Views.OrderVM

@{
    ViewData["Title"] = "Order List";
}

<h2>All Orders</h2>

<table id="orderTable" class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Order Date</th>
            <th>Order Total</th>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User.Name</td>
                <td>@order.OrderDate.ToString("MM/dd/yyyy")</td>
                <td>$@order.OrderTotal</td>
                <td>@order.OrderStatus</td>
                <td>
                    <a asp-area="Admin" asp-controller="Orders" asp-action="Details" asp-route-orderId="@order.Id" class="btn btn-primary">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    <script>
        $(document).ready(function () {
            $('#orderTable').DataTable({
                paging: true,
                ordering: true,
                info: true,
                searching: true,
                columnDefs: [
                    { orderable: false, targets: -1 } // Disable sorting for the last column (Action)
                ],
                language: {
                    paginate: {
                        previous: "&laquo;",
                        next: "&raquo;"
                    },
                    search: "Filter records:",
                    lengthMenu: "Show _MENU_ entries per page"
                }
            });
        });
    </script>
}
